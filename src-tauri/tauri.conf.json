{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Worth",
  "version": "0.0.1",
  "identifier": "com.callumwatkins.worth",
  "build": {
    "beforeBuildCommand": "bun run generate",
    "frontendDist": "../dist",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Worth",
        "width": 1400,
        "height": 900,
        "minWidth": 850,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
